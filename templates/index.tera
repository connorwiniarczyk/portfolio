	</section>

	{%for element in media%}
		<div class="lightbox" id="gallery-{{loop.index}}">
			<div class="lightbox__content">
				<a href="#close-lightbox" class="btn btn--close"></a>
				<a href="#gallery-{{loop.index + 1}}" class="btn btn--next btn--arrow"></a>
				<a href="#gallery-{{loop.index - 1}}" class="btn btn--previous btn--arrow"></a>

				<h2 class="lightbox__title">{{element.title}}</h2>
				{%if element.media_type == "image"%}
					<object class="lightbox__image" data="{{element.url}}"></object>
				{%endif%}
				{%if element.media_type == "video"%}
					<video class="lightbox__image" controls src="{{element.url}}"></video>
				{%endif%}
				{%if element.media_type == "model"%}
					<model-viewer class="lightbox__image model" src="{{element.url}}" autorotate camera-controls></model-viewer>
				{%endif%}
				<p class="lightbox__description">{{element.description}}</p>
			</div>
		</div>
	{%endfor%}

